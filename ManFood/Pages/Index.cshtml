@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

@foreach (var category in Model.CategoryList)
{
    @if (Model.MenuItemList.Where(c => c.CategoryId == category.Id).Count() > 0)
    {
        <div class="row container pb-3 backgroundDark">
            <div class="col-12">
                <div class="row">
                    <h4 class="text pl-1"><b>@category.Name</b></h4>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach (var menuItem in Model.MenuItemList.Where(c => c.CategoryId == category.Id))
                            {
                                <div class="col-lg-3 col-xl-3 col-md-6 pb-4">
                                    <div class="card" style="border:2px solid grey; border-radius: 5px; ">
                                        <div class="pl-3 pt-1 text-center">
                                            @*<h3 class="card-title text"><b>@menuItem.Name</b></h3>*@
                                        </div>
                                        <div class="d-flex justify-content-between form-control" style="border:0px;">
                                            
                                            @*<div class="col-6 text-right h4" style="color:black;"><b>@menuItem.Price</b></div>*@
                                        </div>
                                        <img src="@menuItem.Image" class="card-img-top p-2 rounded" />

                                        <a asp-page="Details" class="btn btn-dark" style="border-radius:2px;" asp-route-id="@menuItem.Id">Details</a>

                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
}
